{
  "name": "angular2-todo-webpack",
  "version": "0.0.0",
  "description": "Angular2 todo webpack integration example",
  "author": {
    "name": "Jay Kan",
    "email": "leicasper@gmail.com"
  },
  "scripts": {
    "clean": "del-cli ./target",
    "typings": "typings install",
    "postinstall": "npm run typings",
    "build:dev": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --display-chunks --progress",
    "server": "cross-env NODE_ENV=development nodemon -w 'server/**/*.*' ./server/main.js",
    "production": "npm run clean && npm run build:prod && npm run server",
    "development": "npm run build:dev",
    "start": "npm run development"
  },
  "license": "MIT",
  "engines": {
    "node": ">=5.11",
    "npm": ">3.x"
  },
  "devDependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.2",
    "zone.js": "~0.6.12",
    "rxjs": "5.0.0-beta.6",
    "core-js": "~2.4.0",

    "del-cli": "~0.2.0",
    "cross-env": "~2.0.0",

    "css-loader": "~0.23.1",
    "postcss-loader": "~0.9.1",
    "sass-loader": "~4.0.0",
    "style-loader": "~0.13.1",
    "raw-loader": "~0.5.1",
    "ts-loader": "~0.8.2",
    "karma-sourcemap-loader": "~0.3.7",
    "tslint": "~3.13.0",
    "typescript": "~1.8.10",
    "typings": "~1.3.0",

    "webpack": "~1.13.1",
    "webpack-dev-server": "~1.14.1",
    "webpack-md5-hash": "~0.0.5",
    "karma-webpack": "~1.7.0",
    "html-webpack-plugin": "~2.22.0",
    "extract-text-webpack-plugin": "~1.0.1",

    "express": "~4.14.0",
    "nodemon": "~1.9.2",
    "winston": "~2.2.0",
    "morgan": "~1.7.0",
    "node-sass": "~3.8.0",
    "autoprefixer": "~6.3.6"
  }
}
